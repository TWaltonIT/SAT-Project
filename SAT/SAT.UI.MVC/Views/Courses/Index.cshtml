@model IEnumerable<SAT.DATA.EF.Models.Course>

@{
    ViewData["Title"] = "Courses";
}


<!-- Blank Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <!-- Recent Sales Start -->
        <div class="container-fluid pt-4 px-4">
            <div class="bg-secondary text-center rounded p-4">
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <h6 class="mb-0">Courses</h6>
                    <button type="button" id="ToggleCourseCreate" class="CreateLink btn btn-link pl-4">
                        <i class="fa fa-solid fa-user-plus"></i>&nbsp;Add New Course
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table text-start align-middle table-bordered table-hover mb-0">
                        <thead>
                            <tr class="text-white">
                                <th scope="col"><input type="checkbox"/></th>
                                <th scope="col">@Html.DisplayNameFor(model => model.CourseId)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.CourseName)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.CourseDescription)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.CreditHours)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Curriculum)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Notes)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><input type="checkbox" id="@item.CourseId" checked="@item.IsActive" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.CourseId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CourseName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CourseDescription)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreditHours)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Curriculum)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                                    <td>
                                        <a class="EditLink" id="@item.CourseId"><i class="fa fa-solid fa-pencil"></i>Edit</a> 
                                        <button type="button" class="DetailsLink btn btn-link btn-success" id="@item.CourseId" data-bs-toggle="modal" data-bs-target="#CourseDetails">
                                            Details
                                        </button>
                                        <a asp-action="Delete" asp-route-id="@item.CourseId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />
                    <br />
                    
                </div>
                <div id="CourseCreate">
                    <partial name="CourseCreate" model="new SAT.DATA.EF.Models.Course()" />
                </div>
            </div>
        </div>
        <!-- Recent Sales End -->
    </div>
</div>

<!-- Blank End -->

<div class="modal fade" id="CourseDetails" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Details</h5>
            </div>
            <div class="modal-body" id="DetailsBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(".DetailsLink").on("click", function (e) {
            let CourseId = $(this).attr("id");
            $("#DetailsBody").load("/Courses/CourseDetails/" + CourseId);
        });

        $("#CourseCreate").hide();
        $("#ToggleCourseCreate").on("click", function () {
            $("#CourseCreate").toggle();
        });

        let originalContent = null;
        $("a.EditLink").on("click", function (e) {
            e.preventDefault();
            let courseId = $(this).attr("id");
            let row = $("#Course-" + courseId).children();
            originalContent = {
                CourseId = courseId,
                CourseName = row[0].innerText,
                CourseDescription = row[1].innerText,
                CreditHours = row[2].innerText,
                Curriculum = row[3].innerText,
                Notes = row[4].innerText,
                IsActive = row[5].innerText
            };

            $.get("/Courses/CourseEdit/" + courseId, function (data) {
                $("#Course-" + courseId).replaceWith(`<tr id="Course-${courseId}">${data}</tr>`)
            });
        });

        $(document).on("click", "#saveUpdate", function () {
            let formData = $("#CourseEditForm").serializeArray();
            console.log(formData);
            $("#MessageContent").html("<div class='alert alert-info'>Processing changes...</div>");

            $.ajax({
                url: "/Courses/AjaxEdit",
                type: "POST",
                data: formData,
                dataType: "json",
                error: function (e) {
                    $("#MessageContent").html("<div class='alert alert-danger'>There was an error processing your changes. Please try again. If the error persists, please contact the site administrator.</div>");
                    $(function () {
                        let row = `<tr>
                                    <td>${originalContent.CourseName}</td>
                                    <td>${originalContent.CourseDescription}</td>
                                    <td>${originalContent.CreditHours}</td>
                                    <td>${originalContent.Curriculum}</td>
                                    <td>${originalContent.Notes}</td>
                                    <td>${originalContent.IsActive}</td>
                                    <td>Refresh to view options</td>
                                </tr>`
                        $("#Course-" + data.courseId).replaceWith(row);
                    });
                },
                success: function (data) {
                    $("#MessageContent").html("<div class='alert alert-success'>Your record was successfully updated!</div>");
                    $("#CourseEditForm")[0].reset();
                    $(function () {
                        let row = `<tr>
                                        <td>${data.CourseName}</td>
                                        <td>${data.CourseDescription}</td>
                                        <td>${data.CreditHours}</td>
                                        <td>${data.Curriculum}</td>
                                        <td>${data.Notes}</td>
                                        <td>${data.IsActive}</td>
                                    </tr>`
                        $("#Course-" + data.courseId).replaceWith(row);
                    });
                }

            });
        });
    </script>
}
