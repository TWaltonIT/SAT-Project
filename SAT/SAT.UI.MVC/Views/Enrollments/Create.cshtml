@model SAT.DATA.EF.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Enroll New Student</h3>
                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Student.FirstName" class="control-label"></label></p>
                        <input asp-for="Student.FirstName" class="form-control"/>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Student.LastName" class="control-label"></label></p>
                        <input asp-for="Student.LastName" class="form-control"/>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="ScheduledClass.Course.CourseName" class="control-label"></label></p>
                        <input asp-for="ScheduledClass.Course.CourseName" class="form-control" />
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="EnrollmentDate" class="control-label"></label></p>
                        <input type="date" asp-for="EnrollmentDate" class="form-control" />
                        <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="row">
                            <div class="col-md-4 offset-md-3"><input type="submit" value="Create" class="btn btn-primary" /></div>
                            <div class="col-md-4"><a asp-action="Index" class="btn btn-secondary">Cancel</a></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
