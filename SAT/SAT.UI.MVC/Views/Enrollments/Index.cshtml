@model IEnumerable<SAT.DATA.EF.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}

<!-- Content Start -->
<div class="content">
    <!-- Sale & Revenue Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <div class="col-sm-6 col-xl-3">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-line fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Today Sale</p>
                        <h6 class="mb-0">$1234</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-bar fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Total Sale</p>
                        <h6 class="mb-0">$1234</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-area fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Today Revenue</p>
                        <h6 class="mb-0">$1234</h6>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xl-3">
                <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                    <i class="fa fa-chart-pie fa-3x text-primary"></i>
                    <div class="ms-3">
                        <p class="mb-2">Total Revenue</p>
                        <h6 class="mb-0">$1234</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Sale & Revenue End -->

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">
            <!-- Recent Sales Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-secondary text-center rounded p-4">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <h6 class="mb-0">Enrollments</h6>
                        <button type="button" id="ToggleEnrollmentCreate" class="CreateLink btn btn-link pl-4">
                            <i class="fa fa-solid fa-user-plus"></i>&nbsp;Enroll New Student
                        </button>
                    </div>
                    <div class="table-responsive">
                        <table class="table text-start align-middle table-bordered table-hover mb-0">
                            <thead>
                                <tr class="text-white">
                                    <th scope="col">@Html.DisplayNameFor(model => model.Student)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.EnrollmentDate)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.Course.CourseName)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.ScheduledClass.InstructorName)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.ScheduledClass.StartDate)</th>
                                    <th scope="col">@Html.DisplayNameFor(model => model.ScheduledClass.EndDate)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Student.FirstName) @Html.DisplayFor(modelItem => item.Student.LastName) </td>
                                        <td>@Html.DisplayFor(modelItem => item.EnrollmentDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Course.CourseName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ScheduledClass.InstructorName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ScheduledClass.StartDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ScheduledClass.EndDate)</td>
                                        <td>
                                            @* <a asp-action="Edit" asp-route-id="@item.EnrollmentId">Edit</a> | *@
                                            <button type="button" class="DetailsLink btn btn-link btn-success" id="@item.EnrollmentId" data-bs-toggle="modal" data-bs-target="#EnrollmentDetails">
                                                Details
                                            </button>
                                            <a asp-action="Delete" asp-route-id="@item.EnrollmentId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <br />

                    </div>
                    <div id="EnrollmentCreate">

                        <partial name="EnrollmentCreate" model="new SAT.DATA.EF.Models.Enrollment()" />
                    </div>
                </div>
            </div>
            <!-- Recent Sales End -->
        </div>
    </div>

    <div class="col-sm-12 col-md-6 col-xl-4">
        <div class="h-100 bg-secondary rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">Calender</h6>
                <a href="">Show All</a>
            </div>
            <div id="calender"></div>
        </div>
    </div>
</div>


<div class="modal fade" id="EnrollmentDetails" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Details</h5>
            </div>
            <div class="modal-body" id="DetailsBody"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(".DetailsLink").on("click", function (e) {
            let EnrollmentId = $(this).attr("id");
            $("#DetailsBody").load("/Enrollments/EnrollmentDetails/" + EnrollmentId);
        });

        $("#EnrollmentCreate").hide();
        $("#ToggleEnrollmentCreate").on("click", function () {
            $("#EnrollmentCreate").toggle();
        });
    </script>
}

