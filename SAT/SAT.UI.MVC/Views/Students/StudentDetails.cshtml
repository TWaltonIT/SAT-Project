@model SAT.DATA.EF.Models.Student

<div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>@Model.FirstName @Model.LastName's Details</h3>
    </div>
    <p class="mb-0">
        @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
    </p>
    <p class="mb-0">
        @Html.DisplayFor(model => model.Major)
    </p>
    <p class="mb-0">
        @Html.DisplayFor(model => model.Address)
    </p>
    <p class="mb-0">
        @Html.DisplayFor(model => model.City), @Html.DisplayFor(model => model.State) @Html.DisplayFor(model => model.Zip)
    </p>
    <p class="mb-0">
        @Html.DisplayFor(model => model.Phone)
    </p>
    <p class="mb-0">
        @Html.DisplayFor(model => model.Email)
    </p>
    <p class="mb-0">
        @Html.DisplayFor(model => model.PhotoUrl)
    </p>
    <p class="mb-0">
        @Html.DisplayFor(model => model.Ss.Ssname)
    </p>
</div>
