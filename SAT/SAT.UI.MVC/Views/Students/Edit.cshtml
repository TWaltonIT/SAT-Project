@model SAT.DATA.EF.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h3 class="text-primary"><i class="fa fa-user-edit me-2"></i>Edit @Model.FirstName @Model.LastName</h3>
                </div>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StudentId" />
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="FirstName" class="control-label"></label></p>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="LastName" class="control-label"></label></p>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Major" class="control-label"></label></p>
                        <input asp-for="Major" class="form-control" />
                        <span asp-validation-for="Major" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Address" class="control-label"></label></p>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="City" class="control-label"></label></p>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"> <label asp-for="State" class="control-label"></label></p>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Zip" class="control-label"></label></p>
                        <input asp-for="Zip" class="form-control" />
                        <span asp-validation-for="Zip" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Phone" class="control-label"></label></p>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Email" class="control-label"></label></p>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="PhotoUrl" class="control-label"></label></p>
                        <input asp-for="PhotoUrl" class="form-control" />
                        <span asp-validation-for="PhotoUrl" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <p class="mb-0"><label asp-for="Ssid" class="control-label"></label></p>
                        <select asp-for="Ssid" class="form-control" asp-items="ViewBag.Ssid"></select>
                        <span asp-validation-for="Ssid" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="row">
                            <div class="col-md-4 offset-md-3"><input type="submit" value="Save" class="btn btn-primary" /></div>
                            <div class="col-md-4"><a asp-action="Index" class="btn btn-secondary">Cancel</a></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
